<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AuthActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"

    tools:context="net.youtoolife.chbmkstud.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_marginLeft="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="120px" />


    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:text="Номер тел."
        android:textColor="#ffffff"
        android:textSize="30px" />



    <EditText
        android:id="@+id/editLogin"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/textInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:text="Пароль"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <EditText
        android:id="@+id/editInvite"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"

        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/textParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:text="Номер родителя"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <EditText
        android:id="@+id/editParent"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="340dp"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"

        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"

        android:layout_gravity="top|end"

        android:background="@drawable/transparent_bg_bordered_button"

        android:text="ВХОД"
        android:textColor="#ffffff"
        android:textSize="30px" />

</android.widget.RelativeLayout>
